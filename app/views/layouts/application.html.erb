<!DOCTYPE html>
<html>
  <head>
    <title>JustDoIt</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/shop/header' %>
    <br>
    <br>
    <div class='container'>
      <div class='row'>
        <%= render 'layouts/shop/sidebar' %>
        <div class='col-lg-9'>
          <br>
          <%= render 'layouts/flash' %>
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
