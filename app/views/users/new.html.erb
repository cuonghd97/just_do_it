<%= provide(:title, "Đăng ký") %>
<%= form_for @user, url: signup_path do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :fullname %>
  <%= f.text_field :fullname %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation, "Nhập lại mật khẩu" %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit "Đăng ký" %>
<% end %>